<p style="color: green"><%= notice %></p>

<div>
  <p>
    <strong>User:</strong>
    <%= @creator.email %>
    <p>----------------------------------------</p>
  </p>

  <% if @creator.events.any? %>
    <strong>Created events:</strong>
    <% @creator.events.order(:event_date).each do |event| %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
  <p>----------------------------------------</p>
  <% end %>

  <% if @creator.attended_events.any? %>
    <strong>Upcoming events:</strong>
    <% @creator.attended_events.upcoming_event.each do |event| %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
    <p>----------------------------------------</p>
    <strong>Attended events:</strong>
    <% @creator.attended_events.upcoming_event.invert_where.each do |event| %>
      <%= render event %>
      <p>
        <%= link_to "Show this event", event %>
      </p>
    <% end %>
  <p>----------------------------------------</p>
  <% end %>

</div>


<div>
  <%= link_to "Back to events", events_path %>
</div>
